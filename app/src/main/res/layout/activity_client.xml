    android:background="@color/white">

    <!-- Header Container -->
    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="16dp">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_account_circle"
            android:contentDescription="@string/ic_account_circle" />

        <!-- Settings Icon -->
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logout"
            android:contentDescription="@string/logout" />

        <!-- User Name -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Nirav Lad"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:text="Welcome to ClientLedgerPro"
            android:textSize="14sp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <!-- Total Dues Section -->
    <RelativeLayout
        android:id="@+id/total_dues_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_below="@id/header_container">

        <TextView
            android:id="@+id/total_dues_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Dues"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/total_dues_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹15,893"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FF0000"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

