<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F4F6"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#0B6CFF"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/clientManagementButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Client Management"
                    android:backgroundTint="#0B6CFF"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/projectManagementButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Project Management"
                    android:backgroundTint="#0B6CFF"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/transactionManagementButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transaction Management"
                    android:backgroundTint="#0B6CFF"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/notificationsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notifications"
                    android:backgroundTint="#0B6CFF"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Card for Outstanding Dues -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/outstandingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Outstanding Dues"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/outstandingAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0.00"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FF5733"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- List of Clients with Outstanding Payments -->
            <TextView
                android:id="@+id/clientsOutstandingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clients with Outstanding Payments"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0B6CFF"
                android:layout_marginBottom="10dp"/>

            <ListView
                android:id="@+id/clientsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:padding="10dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <!-- Transaction Summary Title -->
            <TextView
                android:id="@+id/transactionSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Summary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0B6CFF"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"/>

            <!-- Transaction Summary List -->
            <ListView
                android:id="@+id/transactionSummaryListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:padding="10dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>