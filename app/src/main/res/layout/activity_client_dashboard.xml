<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client_dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:background="@color/color_1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="73dp"
                android:layout_height="76dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_action_navbar_user_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Nirav-Lad"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Client ledger Pro"
                    android:textSize="17dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/ic_logout_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:background="@drawable/rounded_corners_color1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Total Dues"
                android:textSize="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="40dp"
                android:background="@drawable/rounded_corner_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="15,893"
                android:textSize="20dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="26dp"
                android:textColor="@color/amount_color"
                android:background="@drawable/rounded_corner_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="35dp"
            android:gravity="start"
            android:weightSum="6"
            android:background="@drawable/rounded_corner_color2">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="Clients"
                android:textSize="23dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="4dp"
                android:paddingHorizontal="40dp"
                android:paddingVertical="10dp"
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:background="@drawable/rounded_corner_white" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="35"
                android:textSize="25dp"
                android:padding="7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/circle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="35dp"
            android:gravity="start"
            android:weightSum="6"
            android:background="@drawable/rounded_corner_color2">



            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="Projects"
                android:textSize="23dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="4dp"
                android:paddingHorizontal="40dp"
                android:paddingVertical="10dp"
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:background="@drawable/rounded_corner_white" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="78"
                android:textSize="25dp"
                android:padding="7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/circle" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corners_color1"
            android:fontFamily="monospace"
            android:paddingHorizontal="45dp"
            android:paddingVertical="11dp"
            android:text="History"
            android:textSize="27dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:weightSum="3"
            android:background="@color/color_1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Projects"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_corner_white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clients"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_corner_white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_corner_white"/>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>